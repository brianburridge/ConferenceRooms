<div class="container">
  <%= form_tag signup_path, class: 'form-signup', role: 'form' do %>
      <h2>Please Sign Up</h2>
      <%= text_field_tag 'email', nil, class: 'form-control', placeholder: 'Email Address', :required => true, :autofocus => true %>
      <%= password_field_tag 'password', nil, class: 'form-control', placeholder: 'Password', :required => true %>
      <div class="checkbox">
        <label for="remember">
          <input name="remember" type="checkbox" id="remember" value="1"> Remember me
        </label>
      </div>
      <%= submit_tag 'Sign Up', class: 'btn btn-lg btn-primary btn-block' %>
  <% end %>
</div>
